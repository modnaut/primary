<?xml version="1.0" encoding="UTF-8"?>
<sqlMetaData xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/SqlMetaData.xsd">
	<query name="AUTHENTICATE_NINJA" action="SELECT" type="SP">
		<statement value="Common.up_AuthenticateNinja(?, ?)"/>
		<parameters>
			<parameter name="Email" type="VARCHAR"/>
			<parameter name="Password" type="VARCHAR"/>
		</parameters>
	</query>
	<query name="INSERT_UPDATE_SESSION" action="ACTION" type="SP">
		<statement value="Common.up_InsertUpdateSession(?, ?, ?)"/>
		<parameters>
			<parameter name="NinjaId" type="INT"/>
			<parameter name="SessionId" type="BIGINT"/>
			<parameter name="SessionObject" type="VARBINARY"/>
		</parameters>
	</query>
	<query name="GET_SESSION" action="SELECT" type="QUERY">
		<statement value="SELECT SessionObject, LastModifiedDate FROM Common.Session WHERE SessionId = ?"/>
		<parameters>
			<parameter name="SessionId" type="BIGINT"/>
		</parameters>
	</query>
	<query name="GET_NINJA_SESSION" action="SELECT" type="QUERY">
		<statement value="Common.up_GetNinjaSession(?)"/>
		<parameters>
			<parameter name="NinjaId" type="INT"/>
		</parameters>
	</query>
	<query name="GET_MULTIPLE_STRINGS_FOR_LANGUAGE" action="SELECT" type="SP">
		<statement value="Common.up_GetMultipleStringsForLanguage(?, ?, ?)"/>
		<parameters>
			<parameter name="stringCds" type="VARCHAR"/>
			<parameter name="languageCd" type="VARCHAR"/>
			<parameter name="delimiter" type="VARCHAR"/>
		</parameters>
	</query>
	<query name="GET_ALL_STRING_VALUES" action="SELECT" type="QUERY">
		<statement value="
			SELECT
				l.IsoLanguageCd
				,s.StringCd
				,sv.Value
			FROM
				Common.StringValue sv
				LEFT JOIN Common.string s on s.StringId = sv.StringId
				LEFT JOIN Common.language l on l.LanguageId = sv.LanguageId
			ORDER BY
				l.LanguageId ASC
		"/>
	</query>
	<query name="NINJA_HAS_POWER" action="SELECT" type="SP">
		<statement value="Common.up_NinjaHasPower(?, ?)"/>
		<parameters>
			<parameter name="ninjaId" type="INT"/>
			<parameter name="powerId" type="INT"/>
		</parameters>
	</query>
	<query name="NINJA_HAS_POWERS" action="SELECT" type="SP">
		<statement value="Common.up_NinjaHasPowers(?, ?)"/>
		<parameters>
			<parameter name="ninjaId" type="INT"/>
			<parameter name="powerIds" type="VARCHAR"/>
		</parameters>
	</query>
	<query name="GET_HASHPATH_BY_CLASS_AND_METHOD" action="SELECT" type="QUERY">
		<statement value="SELECT HashPath FROM Common.HashPath WHERE Class = ? AND Method = ?"/>
		<parameters>
			<parameter name="Class" type="VARCHAR"/>
			<parameter name="Method" type="VARCHAR"/>
		</parameters>
	</query>
	<query name="GET_CLASS_AND_METHOD_FROM_HASHPATH" action="SELECT" type="QUERY">
		<statement value="SELECT Class, Method FROM Common.HashPath WHERE HashPath = ?"/>
		<parameters>
			<parameter name="HashPath" type="VARCHAR"/>
		</parameters>
	</query>
	<query name="GET_ENTITY_ATTRIBUTE_VALUE_BY_NAMES" action="SELECT" type="QUERY">
		<statement value="SELECT Common.uf_GetEntityAttributeValueByNames(?, ?, ?)"/>
		<parameters>
			<parameter name="entityTypeName" type="VARCHAR"/>
			<parameter name="entityName" type="VARCHAR"/>
			<parameter name="attributeName" type="VARCHAR"/>
		</parameters>
	</query>
</sqlMetaData>