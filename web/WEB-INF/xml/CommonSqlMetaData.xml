<?xml version="1.0" encoding="UTF-8"?>
<sqlMetaData xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/SqlMetaData.xsd">
	<query name="GET_USER_LIST" action="SELECT" type="QUERY">
		<statement value="Select UserName, FirstName, LastName, EmailAddress From Users Where UserId = ?"/>
		<parameters>
			<parameter id="1" name="UserId" type="INT"/>
		</parameters>
	</query>
	<query name="GET_ALL_USERS_ALPHABETICALLY" action="SELECT" type="SP">
		<statement value="Common.GetAllUsersAlphabetically()"/>
	</query>
	<query name="INSERT_USER" action="ACTION" type="QUERY">
		<statement value="INSERT INTO users (UserName, FirstName, LastName, EmailAddress) 
						  VALUES (?, ?, ?, ?)"/>
		<parameters>
			<parameter id="1" name="UserName" type="VARCHAR"/>
			<parameter id="2" name="FirstName" type="VARCHAR"/>
			<parameter id="3" name="LastName" type="VARCHAR"/>
			<parameter id="4" name="EmailAddress" type="VARCHAR"/>
		</parameters>
	</query>
	<query name="AUTHENTICATE_USER" action="SELECT" type="SP">
		<statement value="Common.AuthenticateUser(?, ?)"/>
		<parameters>
			<parameter id="1" name="Email" type="VARCHAR"/>
			<parameter id="2" name="Password" type="VARCHAR"/>
		</parameters>
	</query>
	<query name="INSERT_SESSION" action="ACTION" type="QUERY">
		<statement value="INSERT INTO Common.Session(SessionId, SessionObject, CreatedDate) VALUES (?, ?, CURRENT_TIMESTAMP())"/>
		<parameters>
			<parameter id="1" name="SessionId" type="INT"/>
			<parameter id="2" name="SessionObject" type="BLOB"/>
		</parameters>
	</query>
	<query name="GET_SESSION" action="SELECT" type="QUERY">
		<statement value="SELECT SessionObject, LastModifiedDate FROM Common.Session WHERE SessionId = ?"/>
		<parameters>
			<parameter id="1" name="SessionId" type="INT"/>
		</parameters>
	</query>
	<query name="GET_USER_SESSION" action="SELECT" type="QUERY">
		<statement value="Common.GetUserSession(?)"/>
		<parameters>
			<parameter id="1" name="UserId" type="INT"/>
		</parameters>
	</query>
	<query name="GET_USER" action="SELECT" type="SP">
		<statement value="Common.GetUser(?)"/>
		<parameters>
			<parameter id="1" name="UserId" type="INT"/>
		</parameters>
	</query>
	<query name="GET_USER_TYPES" action="SELECT" type="QUERY">
		<statement value="Select UserTypeCd, Description From Common.UserType Order By Description ASC"/>
	</query>
	<query name="UPDATE_USER" action="ACTION" type="SP">
		<statement value="Common.UpdateUser(?, ?, ?, ?, ?, ?, ?, ?)"/>
		<parameters>
			<parameter id="1" name="UserId" type="INT"/>
			<parameter id="2" name="UserName" type="VARCHAR"/>
			<parameter id="3" name="FirstName" type="VARCHAR"/>
			<parameter id="4" name="LastName" type="VARCHAR"/>
			<parameter id="5" name="EmailAddress" type="VARCHAR"/>
			<parameter id="6" name="HireDateDisabled" type="VARCHAR"/>
			<parameter id="7" name="UserTypeCd" type="VARCHAR"/>
			<parameter id="8" name="UserPassword" type="VARCHAR"/>
		</parameters>
	</query>
</sqlMetaData>